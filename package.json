{
  "name": "junctionrelay-virtualdevice",
  "version": "0.2.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "build:react": "vite build",
    "build:pi": "npm run build:react && electron-builder --linux --arm64",
    "build:windows": "npm run build:react && electron-builder --windows"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.4",
    "@mui/material": "^7.3.4",
    "@rive-app/react-canvas": "^4.23.4",
    "react-gauge-component": "^1.2.64",
    "three": "^0.180.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "vite": "^5.4.11"
  },
  "build": {
    "appId": "com.junctionrelay.virtualdevice",
    "productName": "JunctionRelay_VirtualDevice",
    "files": [
      "main.js",
      "websocket-server.js",
      "ElectronDataProvider.js",
      "index.html",
      "icon.png",
      "dist-react/**/*"
    ],
    "linux": {
      "target": "tar.gz",
      "category": "Utility",
      "icon": "build/JunctionRelay.png"
    },
    "win": {
      "target": "nsis",
      "icon": "build/JunctionRelay.ico"
    }
  }
}
